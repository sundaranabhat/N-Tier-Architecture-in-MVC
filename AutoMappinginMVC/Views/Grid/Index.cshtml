
<script src="~/Scripts/jquery-1.10.2.min.js"></script>﻿﻿
@(Html.Kendo().Grid<AutoMappinginMVC.DAL.Employee>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.Name);
        columns.Bound(c => c.Position);
        columns.Bound(c => c.Age);
        columns.Bound(c => c.Salary);
      })
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Employees_Read", "Grid"))
      )
)